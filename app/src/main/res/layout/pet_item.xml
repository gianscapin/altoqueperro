<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#D1F8F3"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imagePetItem"
            android:layout_width="74dp"
            android:layout_height="69dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp"
            android:background="#FFFFFF"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/atp_logo" />



        <TextView
            android:id="@+id/txtPetItemName"
            android:layout_width="277dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:foregroundTint="@color/black"
            android:text="Firulais"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/txtPetItemState"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagePetItem"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtPetItemState"
            android:layout_width="277dp"
            android:layout_height="23dp"
            android:text="Caracteristicas"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imagePetItem"
            app:layout_constraintTop_toBottomOf="@id/txtPetItemName" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>