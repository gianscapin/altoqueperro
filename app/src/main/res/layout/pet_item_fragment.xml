<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#D1F8F3"
    app:cardCornerRadius="30dp"
    app:cardElevation="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="457dp"
        tools:context=".fragments.LostPetItemFragment">

        <ImageView
            android:id="@+id/imagePetDetail"
            android:layout_width="153dp"
            android:layout_height="182dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/txtPetName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.593"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/txtPetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firulais"
            android:textSize="38sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.605" />

        <TextView
            android:id="@+id/txtPetSizeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:text="TamaÃ±o"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPetTypeText"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtPetSexText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:text="Sexo"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPetSizeText"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtPetCoatText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:text="Pelaje"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPetName"
            app:layout_constraintVertical_bias="0.609" />

        <TextView
            android:id="@+id/txtPetEyeColorText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:text="Ojos"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPetTypeText"
            app:layout_constraintVertical_bias="0.764" />

        <TextView
            android:id="@+id/txtPetType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:text="Perro"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.326"
            app:layout_constraintStart_toEndOf="@+id/txtPetTypeText"
            app:layout_constraintTop_toBottomOf="@+id/txtPetName"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtPetSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mediano"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.459"
            app:layout_constraintStart_toEndOf="@+id/txtPetSizeText"
            app:layout_constraintTop_toBottomOf="@+id/txtPetType"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtPetSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Macho"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toEndOf="@+id/txtPetSexText"
            app:layout_constraintTop_toBottomOf="@+id/txtPetSize"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/txtPetEyeColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:text="Azules"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.346"
            app:layout_constraintStart_toEndOf="@+id/txtPetEyeColorText"
            app:layout_constraintTop_toBottomOf="@+id/txtPetType"
            app:layout_constraintVertical_bias="0.764" />

        <TextView
            android:id="@+id/txtPetCoat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Negro"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.453"
            app:layout_constraintStart_toEndOf="@+id/txtPetCoatText"
            app:layout_constraintTop_toBottomOf="@+id/txtPetName"
            app:layout_constraintVertical_bias="0.609" />

        <TextView
            android:id="@+id/txtPetTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="76dp"
            android:text="Animal"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtPetName"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>