<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout13"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PetFoundHostNo">

    <Button
        android:id="@+id/checkShelters"
        android:layout_width="208dp"
        android:layout_height="78dp"
        android:layout_marginTop="108dp"
        android:backgroundTint="#D36D5E"
        android:text="VER HOGARES CERCA"
        android:textColor="#FFFFFF"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noProblemMessage2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/noProblemMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foregroundGravity="center_horizontal"
        android:gravity="center"
        android:text="¡No hay problema!"
        android:textColor="#000000"
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.098" />

    <TextView
        android:id="@+id/noProblemMessage2"
        android:layout_width="321dp"
        android:layout_height="126dp"
        android:layout_marginBottom="384dp"
        android:gravity="center"
        android:text="Podés lleva a la mascota que encontraste a un hogar de tránsito o veterinaria cerca tuyo, que se encargarán de hospedarlo hasta que encontremos a su familia."
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noProblemMessage"
        app:layout_constraintVertical_bias="0.582" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="309dp"
        android:layout_height="211dp"
        android:layout_marginTop="36dp"
        android:src="@drawable/maps_template"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noProblemMessage2"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>